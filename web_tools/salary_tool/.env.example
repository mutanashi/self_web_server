# Copy to .env and customize as needed

# Database
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/salary_system
SPRING_DATASOURCE_USERNAME=salary_user
SPRING_DATASOURCE_PASSWORD=salary_pass123

# JPA
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true

# Mail (Gmail SMTP). If you use Google, enable 2-Step Verification on your account
# and create an App Password (a 16-character code shown as 4 groups).
# Put your Gmail address as username and the 16-char app password below.
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=your_gmail_address@gmail.com
SPRING_MAIL_PASSWORD=your_16_char_google_app_password

# JWT
JWT_SECRET=change-me-please
JWT_EXPIRATION=86400000

# Temporary token TTL (seconds)
TEMP_TOKEN_EXPIRATION_SECONDS=600
